<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uncc.vedhasd.smartutility.UserRegister" >

    <TextView
        android:id="@+id/tvUserHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID:"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />
    
    <TextView 
        android:id="@+id/tvAppname"
        android:layout_below="@+id/tvUserHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Appliance Name"/>
    
    
    <TextView 
        android:id="@+id/tvEnergy"
        android:layout_below="@+id/tvAppname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tvAppname"
        android:text="Energy"/>
    
    
    <TextView 
        android:id="@+id/tvOpTime"
        android:layout_below="@+id/tvEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tvAppname"
        android:text="Operation Time"/>
    
    
    <TextView 
        android:id="@+id/tvStartTime"
        android:layout_below="@+id/tvOpTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tvAppname"
        android:text="Start Time"/>
    
    
    <TextView 
        android:id="@+id/tvDeadline"
        android:layout_below="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tvAppname"
        android:text="Deadline"/>
    

    
    <TextView 
        android:id="@+id/tvConstraint"
        android:layout_below="@+id/tvDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tvAppname"
        android:text="Constraints"/>
    
    <Button 
        android:id="@+id/bEdit"
        android:layout_below="@+id/tvConstraint"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit App"/>
    
    <Button 
        android:id="@+id/bBack"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvConstraint"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/bEdit"
        android:layout_height="wrap_content"
        android:text="Back"/>
