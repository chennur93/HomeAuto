<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >


<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uncc.vedhasd.smartutility.UserRegister" >

    <TextView
        android:id="@+id/tUserHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID:"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />
    
    <TextView 
        android:id="@+id/tAppname"
        android:layout_below="@+id/tUserHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Appliance Name"/>
    
    <EditText
        android:id="@+id/eAppname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tUserHeader"
        android:layout_toRightOf="@+id/tAppname"
        android:inputType="text"
        android:hint="E.g Washing Machine" />
    
    <TextView 
        android:id="@+id/tEnergy"
        android:layout_below="@+id/tAppname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tAppname"
        android:text="Energy"/>
    
    <EditText
        android:id="@+id/eEnergy"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eAppname"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/eAppname"
        android:inputType="number"
        android:hint="E.g 38 for 38Watts" />
    
    <TextView 
        android:id="@+id/tOpTime"
        android:layout_below="@+id/tEnergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tAppname"
        android:text="Operation Time"/>
    
    <EditText
        android:id="@+id/eOpTime"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eEnergy"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/eAppname"
        android:inputType="number"
        android:hint="Enter time in minutes" />
    
    <TextView 
        android:id="@+id/tStartTime"
        android:layout_below="@+id/tOpTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tAppname"
        android:text="Start Time"/>
    
    <EditText
        android:id="@+id/eStartTime"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/eAppname"
        android:layout_below="@+id/eOpTime"
        android:inputType="time"
        android:hint="E.g 0800 for 8:00am" />
    
    <TextView 
        android:id="@+id/tDeadline"
        android:layout_below="@+id/tStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tAppname"
        android:text="Deadline"/>
    
    <EditText
        android:id="@+id/eDeadline"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:textSize="14sp"
        android:layout_alignLeft="@+id/eAppname"
        android:layout_below="@+id/eStartTime"
        android:inputType="time"
        android:hint="E.g 0800 for 8:00am" />
    
    <TextView 
        android:id="@+id/tConstraint"
        android:layout_below="@+id/tDeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tAppname"
        android:text="Constraints"/>
    
    <EditText
        android:id="@+id/eConstraints"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:textSize="14sp"
        android:layout_alignLeft="@+id/eAppname"
        android:layout_below="@+id/eDeadline"
        android:inputType="text"
        android:hint="E.g Soft or Hard" />
    
    <!-- Spinner will come here  -->
