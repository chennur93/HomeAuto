<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >


<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uncc.vedhasd.smartutility.UserRegister" >

    <TextView
        android:id="@+id/tHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill the form to register"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />
    
    <TextView 
        android:id="@+id/tUsername"
        android:layout_below="@+id/tHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Username"/>
    
    <EditText
        android:id="@+id/eUsername"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tHeader"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tUsername"
        android:textSize="14sp"
        android:inputType="text" />
    
    <TextView 
        android:id="@+id/tPassword"
        android:layout_below="@+id/tUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tUsername"
        android:text="Password"/>
    
    <EditText
        android:id="@+id/ePassword"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eUsername"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/eUsername"
        android:inputType="textPassword" />
    
    <TextView 
        android:id="@+id/tVerifyPassword"
        android:layout_below="@+id/tPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tPassword"
        android:text="Verify Password"/>
    
    <EditText
        android:id="@+id/eVerifyPassword"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ePassword"
        android:layout_alignLeft="@+id/eUsername"
        android:textSize="14sp"
        android:inputType="textPassword" />
    
    <TextView 
        android:id="@+id/tFirstname"
        android:layout_below="@+id/tVerifyPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tPassword"
        android:text="First Name"/>
    
    <EditText
        android:id="@+id/eFirstname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/eUsername"
        android:layout_below="@+id/eVerifyPassword"
        android:inputType="textPersonName" />
    
    <TextView 
        android:id="@+id/tLastname"
        android:layout_below="@+id/tFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tPassword"
        android:text="Last Name"/>
    
    <EditText
        android:id="@+id/eLastname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/eUsername"
        android:layout_below="@+id/eFirstname"
        android:inputType="textPersonName" />
    
    <TextView 
        android:id="@+id/tEmail"
        android:layout_below="@+id/tLastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tPassword"
        android:text="E-mail"/>
    
    <EditText
        android:id="@+id/eEmail"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/eUsername"
        android:layout_below="@+id/eLastname"
        android:inputType="textEmailAddress" />
    
    <TextView 
        android:id="@+id/tPhoneno"
        android:layout_below="@+id/tEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/tPassword"
        android:text="Phone Number"/>
    
    <EditText
        android:id="@+id/ePhoneno"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/eUsername"
        android:layout_below="@+id/eEmail"
        android:inputType="phone" />
    
    <Button 
        android:id="@+id/bReset"
        android:layout_below="@+id/tPhoneno"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"/>
    
    <Button 
        android:id="@+id/bRegister"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tPhoneno"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/bReset"
        android:layout_height="wrap_content"
        android:text="Register"/>
    
    <Button 
        android:id="@+id/bBack"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tPhoneno"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/bRegister"
        android:layout_height="wrap_content"
        android:text="Back"/>

    <CheckBox
        android:id="@+id/cAgreeMent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bRegister"
        android:layout_below="@+id/bRegister"
        android:layout_marginTop="43dp"
        android:text="Terms and Conditions" />

</RelativeLayout>

</ScrollView>
